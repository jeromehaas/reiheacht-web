<div class="service-detail section">
	<div class="service-detail__inner section__inner">
		<span class="service-detail__heading heading--h2">{{ entry.serviceDetailHeading }}</span>
		<img class="service-detail__image" src="{{ entry.serviceDetailImage.one().url() }}" alt="Image">
		<div class="service-detail__quote quote">
			<p class="quote__text">{{ entry.serviceDetailQuote }}</p>
		</div>
		<div class="service-detail__content">
			{% for block in entry.serviceDetailContent.all() %}
				{% include "blocks/" ~ block.type ignore missing %}
			{% endfor %}
		</div>
	</div>
</div>
