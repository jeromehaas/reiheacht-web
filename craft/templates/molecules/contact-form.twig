{% set message = message ?? null %}

<form class="contact-form js-contact-form" method="post" action="" accept-charset="UTF-8">
	
	{{ csrfInput() }}
	{{ actionInput('contact-form/send') }}
	{{ redirectInput('/#kontakt') }}

	<input type="hidden" name="subject" value="Neue Nachricht von der Website">
	<input type="hidden" name="message[formName]" value="Conact Form">

	<input class="contact-form__input contact-form__input--name" type="text" name="fromName" id="name" placeholder="*Name" value="">
	<input class="contact-form__input contact-form__input--email" type="text" name="fromEmail" id="email" placeholder="*Email" value="">
	<input class="contact-form__input contact-form__input--phone" type="text" name="message[phone]" id="phone" placeholder="Telefonnummer" value="">
	<textarea class="contact-form__input contact-form__input--message" name="message[message]" id="text" placeholder="*Schiess los!" cols="30" rows="10"></textarea>
	<span class="contact-form__submit-button submit-button">
		<input class="submit-button__input" type="submit" value="Senden">
		<p class="submit-button__error-label">Bitte f√ºlle zuerst alle *Felder aus.</p>
	</span>

	<div class="contact-form__flash flash">	
		{% if craft.app.session.hasFlash('notice') %}
			<p class="flash__message flash__message--success">{{ craft.app.session.getFlash('notice') }}</p>
		{% elseif craft.app.session.hasFlash('error') %}
			<p class="flash__message flash__message--error">{{ craft.app.session.getFlash('error') }}</p>
		{% endif %}
	</div>

</form>

